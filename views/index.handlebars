<div class="container">
  <div class="jumbotron text-center">
    <img src="../assets/img/burger.png" alt="Burger" width="154" height="150">

    <h1>The Burger Factory</h1>
    <hr>

    <card>
      <form class="create-form">
        <div class="form-group">
          <h4>Order a New Burger:</h4>
          <input type="text" id="new-burger" name="burger">
          <button type="submit" class="btn btn-warning" id="add-burger"><span class="fa fa-plus"></span></button>
        </div>
      </form>
    </card>
  </div>

  <div class="row">
    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Burgers to Eat:
            <hr>
          </h5>
          <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <p class="d-flex justify-content-between align-items-center">
              #{{this.id}} - {{this.burger_name}}

              <button type="button" class="eat-burger btn btn-primary pull-right" id="eat-burger" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Eat me!</button>
            </p>
            <hr>
            {{/unless}}
            {{/each}}
          </ul>
        </div>
      </div>
    </div>

    <div class="col-sm-6">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title">Burgers That Have Been Eaten:
            <hr>
          </h5>

          <ul>
            {{#each burgers}}
            {{#if devoured}}
            <p class="d-flex justify-content-between align-items-center">
              #{{this.id}} - {{this.burger_name}}

              <button type="button" class="over-burger btn btn-danger" id="over-burger" data-id="{{this.id}}"
                data-newDevoured="{{devour}}">Remove</button>
            </p>
            <hr>

            {{/if}}
            {{/each}}
          </ul>

        </div>
      </div>
    </div>
  </div>
</div>